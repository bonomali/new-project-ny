# -*- mode: Python -*-

local_resource(
  'api-compile',
  './gradlew bootJar && ' +
  'unzip -o build/libs/api-0.0.1-SNAPSHOT.jar -d build/jar-staging && ' +
  'rsync --inplace --checksum -r build/jar-staging/ build/jar',
  deps=['src', 'build.gradle'])

docker_build(
  'api-image',
  './build/jar',
  dockerfile='./Dockerfile',
  live_update=[
    sync('./build/jar/BOOT-INF/lib', '/app/lib'),
    sync('./build/jar/META-INF', '/app/META-INF'),
    sync('./build/jar/BOOT-INF/classes', '/app'),
  ],
  entrypoint = 'find . | entr -r java -Dspring.profiles.active=k8s -noverify -cp .:./lib/* gov.ny.its.Application')

k8s_yaml('k8s.yml')
k8s_resource('api', port_forwards=8000, resource_deps=['api-compile','database'])
